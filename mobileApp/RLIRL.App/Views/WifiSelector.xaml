<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RLIRL.App.Views"
             xmlns:vm="clr-namespace:RLIRL.App.ViewModels"
             xmlns:models="clr-namespace:RLIRL.App.Models"
             xmlns:fonts="clr-namespace:RLIRL.App.Resources.Fonts"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="vm:WifiSelectorViewModel"
             x:Class="RLIRL.App.Views.WifiSelector"
             x:Name="ContentView">
    
    <!-- Load data -->
    <ContentView.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Loaded"
            BindingContext="{Binding Path=BindingContext, Source={x:Reference ContentView}, x:DataType=ContentView}"
            Command="{Binding LoadNetworksCommand}" />
    </ContentView.Behaviors>

    <Border Style="{StaticResource CardBorder}">
        <Grid>
            <Grid Style="{StaticResource CardContainer}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <!-- Header and Refresh Button -->
                <Grid Grid.Row="0" Style="{StaticResource HeaderGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" 
                           Text="WiFi Networks" 
                           Style="{StaticResource HeaderLabel}" />

                    <Border Grid.Column="1" Style="{StaticResource RefreshButtonBorder}">
                        <ImageButton Command="{Binding LoadNetworksCommand}"
                                     Style="{StaticResource RefreshIconButton}"
                                     IsEnabled="{Binding Loading, Converter={toolkit:InvertedBoolConverter}}">
                            <ImageButton.Source>
                                <FontImageSource FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                 Glyph="{x:Static fonts:FluentUI.arrow_clockwise_12_regular}"
                                                 Size="32"
                                                 Color="DodgerBlue" />
                            </ImageButton.Source>
                        </ImageButton>
                    </Border>
                </Grid>

                <!-- Network List -->
                <ListView Grid.Row="1"
                          ItemsSource="{Binding WifiNetworks}" 
                          SelectionMode="Single" 
                          IsVisible="{Binding WifiNetworks, Converter={toolkit:IsListNotNullOrEmptyConverter}}"
                          x:Name="ContentViewListView">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:NetworkListItem">
                            <ViewCell>
                                <Border Style="{StaticResource ListItemBorder}">
                                    <Grid Style="{StaticResource ListItemGrid}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Wifi Icon -->
                                        <Image Grid.Column="0" IsVisible="{Binding Icon, Converter={toolkit:IsStringNotNullOrWhiteSpaceConverter}}" >
                                            <Image.Source>
                                                <FontImageSource FontFamily="FluentUI"
                                                     Glyph="{Binding Icon}"
                                                     Size="30" />
                                            </Image.Source>
                                        </Image>

                                        <!-- Network Name -->
                                        <Label Grid.Column="1" Text="{Binding Ssid}" />

                                        <!-- Connected Text -->
                                        <Label Grid.Column="2" IsVisible="{Binding Connected}" Style="{StaticResource ConnectedLabel}" />

                                        <!-- Selected item Style -->
                                        <Grid.Triggers>
                                            <DataTrigger TargetType="Grid" Binding="{Binding Connected}" Value="True">
                                                <Setter Property="BackgroundColor" Value="#40ADD8E6" />
                                            </DataTrigger>
                                        </Grid.Triggers>
                                    </Grid>
                                </Border>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <!-- Item Click -->
                    <ListView.Behaviors>
                        <toolkit:EventToCommandBehavior EventName="ItemSelected"
                                                BindingContext="{Binding Path=BindingContext, Source={x:Reference ContentView}}"
                                                Command="{Binding ConnectToNetworkCommand}"
                                                CommandParameter="{Binding SelectedItem, Source={x:Reference ContentViewListView}}" />
                    </ListView.Behaviors>
                </ListView>

                <!-- No Networks Available Message and Settings Button -->
                <Grid Grid.Row="2"
                      Style="{StaticResource NoContentGrid}"
                      IsVisible="{Binding WifiNetworks, Converter={toolkit:IsListNullOrEmptyConverter}}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                
                    <Label Grid.Row="0"
                           Text="No WiFi networks found" 
                           Style="{StaticResource NoContentLabel}" />

                    <Label Grid.Row="1"
                           Text="You can open WiFi settings to manually connect to a network" 
                           Style="{StaticResource NoContentDescriptionLabel}" />

                    <Button Grid.Row="2"
                            Text="Open WiFi Settings" 
                            Command="{Binding NavigateToSettingsCommand}"
                            Style="{StaticResource SettingsButton}" />
                </Grid>
            </Grid>

            <!-- Loading Overlay -->
            <Grid IsVisible="{Binding Loading}" Style="{StaticResource LoadingOverlay}">
                <ActivityIndicator 
                    IsRunning="{Binding Loading}" 
                    Style="{StaticResource LoadingIndicator}" />
            </Grid>
        </Grid>
    </Border>
</ContentView>