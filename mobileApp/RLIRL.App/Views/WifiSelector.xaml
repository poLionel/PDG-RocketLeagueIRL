<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RLIRL.App.Components"
             xmlns:vm="clr-namespace:RLIRL.App.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:wifi="clr-namespace:MauiWifiManager.Abstractions;assembly=MauiWifiManager"
             x:DataType="vm:WifiSelectorViewModel"
             x:Class="RLIRL.App.Components.WifiSelector"
             x:Name="ContentView">
    
    <ContentView.BindingContext>
        <vm:WifiSelectorViewModel />
    </ContentView.BindingContext>

    <!-- Content View Events -->
    <ContentView.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Loaded"
            BindingContext="{Binding Path=BindingContext, Source={x:Reference ContentView}, x:DataType=ContentView}"
            Command="{Binding LoadNetworksCommand}" />
    </ContentView.Behaviors>
    
    <StackLayout Padding="20">
        <Label Text="Available WiFi Networks" FontSize="20" />
        
        <!-- Error Message -->
        <Label Text="{Binding ErrorMessage}" 
               TextColor="Red" 
               FontAttributes="Bold"
               IsVisible="{Binding ErrorMessage, Converter={toolkit:IsStringNullOrEmptyConverter}}" />

        <!-- Network List -->
        <ListView ItemsSource="{Binding WifiNetworks}"
                  SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="wifi:NetworkData">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Ssid}" />
                        <Label Text="{Binding SignalStrength}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentView>