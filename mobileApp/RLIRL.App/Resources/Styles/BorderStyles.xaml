<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Semi-transparent Card Border Style -->
    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 10,10,10,10" />
        <Setter Property="BackgroundColor" Value="#10FFFFFF" />
        <Setter Property="Stroke" Value="Transparent" />
    </Style>

    <!-- List Item Border Style -->
    <Style x:Key="ListItemBorder" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 10,10,10,10" />
        <Setter Property="Stroke" Value="Transparent" />
    </Style>

    <!-- Refresh Button Border Style -->
    <Style x:Key="RefreshButtonBorder" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 10,10,10,10" />
        <Setter Property="Stroke" Value="Transparent" />
    </Style>

</ResourceDictionary>