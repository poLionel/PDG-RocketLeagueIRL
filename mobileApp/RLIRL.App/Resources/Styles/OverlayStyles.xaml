<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Loading Overlay Grid Style -->
    <Style x:Key="LoadingOverlay" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="#40FFFFFF" />
    </Style>

    <!-- Loading Activity Indicator Style -->
    <Style x:Key="LoadingIndicator" TargetType="ActivityIndicator">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Color" Value="DodgerBlue" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="WidthRequest" Value="40" />
    </Style>

</ResourceDictionary>