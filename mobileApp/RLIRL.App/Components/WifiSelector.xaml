<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RLIRL.App.Components"
             xmlns:vm="clr-namespace:RLIRL.App.ViewModels"
             x:DataType="vm:WifiSelectorViewModel"
             x:Class="RLIRL.App.Components.WifiSelector">
    <StackLayout Padding="20">
        <Label Text="Available WiFi Networks" FontSize="20" />
        <ListView ItemsSource="{Binding WifiNetworks}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedNetwork, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Label Margin="5" Padding="10" Text="{Binding Ssid}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentView>