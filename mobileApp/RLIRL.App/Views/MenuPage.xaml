<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RLIRL.App.Views.MenuPage"
             Title="MenuPage">
    <VerticalStackLayout Style="{StaticResource MenuContainer}">
        <Button Text="Play" Clicked="OnPlay" />
        <Button Text="Connect your car" Clicked="OnConnect" />
        <Button Text="Spectate a game" Clicked="OnSpectate" />
    </VerticalStackLayout>
</ContentPage>