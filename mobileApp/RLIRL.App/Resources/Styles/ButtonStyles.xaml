<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Refresh Icon Button Style -->
    <Style x:Key="RefreshIconButton" TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="#10FFFFFF" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Padding" Value="0,3,3,0" />
    </Style>

    <!-- Settings Button Style -->
    <Style x:Key="SettingsButton" TargetType="Button">
        <Setter Property="MaximumWidthRequest" Value="300" />
    </Style>

</ResourceDictionary>